<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/et_insert_width"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_x_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/text_size_12"
        tools:ignore="Autofill,LabelFor"
        android:gravity="center"
        android:hint="@string/input_width"/>

    <TextView
        android:id="@+id/tv_x_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_insert_height"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_insert_width"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/x_label"
        android:textSize="@dimen/text_size_14"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_insert_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_x_label"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/text_size_12"
        tools:ignore="Autofill,LabelFor"
        android:gravity="center"
        android:hint="@string/input_height"/>


</androidx.constraintlayout.widget.ConstraintLayout>